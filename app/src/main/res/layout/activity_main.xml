<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    tools:context="com.zhongqin.xiaoqinzhushou.view.MainActivity">




   <LinearLayout
       android:layout_marginTop="40dip"
       android:layout_marginLeft="50dip"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">


        <TextView
            android:textSize="46dp"
            android:text="小秦助手"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


   </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center|center_vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/guide"
            android:layout_gravity="center"
            android:layout_width="236.4dp"
            android:focusable="true"
            android:layout_weight="1"
            android:layout_marginRight="70dp"
            android:layout_height="357.6dp"

            android:background="@drawable/guideselector">


        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/zhidengjiaju"
            android:layout_width="236.4dp"
            android:layout_marginRight="70dp"

            android:layout_height="357.6dp"
            android:focusable="true"
            android:background="@drawable/smarthomeselector">


        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/checkupdata"
            android:layout_width="236.4dp"
            android:focusable="true"

            android:layout_height="357.6dp"

            android:background="@drawable/updateselector">


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30dp"
            android:text="v2.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>